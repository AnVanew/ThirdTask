<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>BookManageServlet</servlet-name>
        <servlet-class>Servlets.BookManageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BookManageServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OneBookServlet</servlet-name>
        <servlet-class>Servlets.BookServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OneBookServlet</servlet-name>
        <url-pattern>/searchBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DataBaseServlet</servlet-name>
        <servlet-class>Servlets.DataBaseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DataBaseServlet</servlet-name>
        <url-pattern>/initDataBase</url-pattern>
    </servlet-mapping>

</web-app>